<section class="py-12 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center">
            <h2 class="text-4xl font-bold text-gray-900 mt-2">Nuestras principales marcas</h2>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 mt-8">
            <!-- Marca 1: Espiga Norteña -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden relative">
                <!-- <img class="w-full h-64 object-cover" src="ruta-de-la-imagen-espiga-nortena.jpg" alt="Espiga Norteña"> -->
                <img class="w-full h-64 object-cover" src="/sacos/1.png" alt="Espiga Norteña">
                <div class="absolute top-0 right-0 bg-yellow-500 text-white text-xs font-semibold px-2 py-1">Marca estrella</div>
                <div class="p-6 bg-green-900">
                    <h3 class="text-xl font-semibold text-yellow-400">Espiga Norteña</h3>
                    <p class="text-gray-100 mt-2">Arroz criollo, fresco de gran calidad y buena cocción</p>
                </div>
            </div>

            <!-- Marca 2: Espiga Añejo -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden relative">
                <!-- <img class="w-full h-64 object-cover" src="ruta-de-la-imagen-espiga-anejo.jpg" alt="Espiga Añejo"> -->
                <img class="w-full h-64 object-cover" src="/sacos/10.png" alt="Espiga Añejo">
                <div class="absolute top-0 right-0 bg-red-500 text-white text-xs font-semibold px-2 py-1">Nueva marca</div>
                <div class="p-6 bg-green-900">
                    <h3 class="text-xl font-semibold text-yellow-400">Espiga Añejo</h3>
                    <p class="text-gray-100 mt-2">Arroz añejo, buen sabor y de calidad extra superior</p>
                </div>
            </div>

            <!-- Marca 3: Doña Flor Turqueza -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden relative">
                <img class="w-full h-64 object-cover" src="/sacos/6.png" alt="Doña Flor Turqueza">
                <div class="absolute top-0 right-0 bg-green-500 text-white text-xs font-semibold px-2 py-1">El más accesible</div>
                <div class="p-6 bg-green-900">
                    <h3 class="text-xl font-semibold text-yellow-400">Doña Flor Turqueza</h3>
                    <p class="text-gray-100 mt-2">Arroz criollo con sabor casero al alcance de todo público</p>
                </div>
            </div>

            <!-- Marca 4: Tucano -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden relative">
                <img class="w-full h-64 object-cover" src="/sacos/11.png" alt="Tucano">
                <div class="absolute top-0 right-0 bg-purple-500 text-white text-xs font-semibold px-2 py-1">Próximamente</div>
                <div class="p-6 bg-green-900">
                    <h3 class="text-xl font-semibold text-yellow-400">Tucano</h3>
                    <p class="text-gray-100 mt-2">Arroz añejo de la selva peruana accesible a todo público</p>
                </div>
            </div>
        </div>
    </div>
</section>

