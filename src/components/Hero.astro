<style>
    .video-container {
        position: relative;
        width: 100%;
        height: 100vh; /* O ajusta esto según la altura deseada */
        overflow: hidden;
    }

    @font-face {
        font-family: "BrushScriptOpti-Regular";
        src: url("/BrushScriptOpti-Regular.otf") format("opentype");
    }

    @font-face {
        font-family: "Myriad Variable";
        src: url("/MyriadVariableConcept.ttf") format("truetype");
    }

    .font-semper {
        font-family: "BrushScriptOpti-Regular", cursive;
        font-size: 20vh;
        font-weight: 400;
    }

    .font-myriad {
        font-family: "Myriad Variable", sans-serif;
        font-size: 13vh;
        font-weight: 800;
    }

    .gradient {
        background-image: url("/mesh-gradient-green.jpeg");
        background-size: cover;
        pointer-events: none;
        mix-blend-mode: multiply;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 2;
    }

    video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(100%) brightness(1.2);
    }

    /* Ajustes para dispositivos móviles */
    @media (max-width: 768px) {
        .font-semper {
            font-size: 10vh; /* Reducir tamaño de la fuente para dispositivos pequeños */
        }

        .font-myriad {
            font-size: 6vh; /* Reducir tamaño de la fuente para dispositivos pequeños */
        }

        .text-8xl {
            font-size: 5vh; /* Ajustar el tamaño general del título */
        }

        .text-lg {
            font-size: 3vh; /* Ajustar el tamaño del subtítulo */
        }

        .grid-cols-2 {
            grid-template-columns: 1fr; /* Mostrar los cuadros en una sola columna en pantallas pequeñas */
        }

        .grid-cols-4 {
            grid-template-columns: 1fr; /* Ajustar la grid a una sola columna en móviles */
        }

        .overlay {
            padding: 8px; /* Reducir padding para dispositivos móviles */
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 3;
            display: flex;
            flex-direction: column; /* Cambiar la dirección a columna para pantallas pequeñas */
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .space-y-4 > * {
            margin-bottom: 8px; /* Reducir el espacio vertical entre elementos */
        }

        .text-center.font-semibold {
            font-size: 3.5vh; /* Ajustar tamaño de las etiquetas de servicios */
            padding: 8px; /* Reducir el padding de las etiquetas */
        }

        .video-container {
            height: 80vh; /* Reducir la altura del contenedor de video para móviles */
        }

        .desc {
            font-size: 2.5vh; /* Ajustar el tamaño de la descripción para que se vea mejor en móviles */
        }
    }
</style>

<header class="video-container">
    <video autoplay loop muted>
        <source src="/video-rice.mp4" type="video/mp4" />
        Tu buscador no soporta este formato.
    </video>
    <div class="gradient"></div>
    <div class="overlay absolute inset-0 z-10 flex items-center p-8 justify-center md:justify-start">
        <div class="space-y-4">
            <p class="text-white text-8xl">
                <span class="font-semper">S</span><span class="font-myriad pl-2"
                >EMPER</span
                >
                <small class="text-gray-300 text-lg block"
                    >Nuestros Servicios</small
                >
            </p>
            <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-4">
                <span
                    class="text-white text-center font-semibold text-lg bg-black bg-opacity-50 px-4 py-2 rounded"
                    >SECADO</span
                >
                <span
                    class="text-white text-center font-semibold text-lg bg-black bg-opacity-50 px-4 py-2 rounded"
                    >PILADO</span
                >
                <span
                    class="text-white text-center font-semibold text-lg bg-black bg-opacity-50 px-4 py-2 rounded"
                    >VENTAS</span
                >
                <span
                    class="text-white text-center font-semibold text-lg bg-black bg-opacity-50 px-4 py-2 rounded"
                    >REPROCESO</span
                >
            </div>
            <p class="desc text-white max-w-md">
                Grupo económico de servicios agroindustriales.
            </p>
        </div>
    </div>
</header>
